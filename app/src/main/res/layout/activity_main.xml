<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/fragment_discover"
        android:name="com.ghy.katherinejy.liumall.DiscoverFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"/>

    <fragment
        android:id="@+id/fragment_func"
        android:name="com.ghy.katherinejy.liumall.FuncFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"/>

    <fragment
        android:id="@+id/fragment_setting"
        android:name="com.ghy.katherinejy.liumall.SettingFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"/>

    <RadioGroup
        android:id="@+id/bottomGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:checkedButton="@id/radioHome">

        <RadioButton
            android:id="@+id/radioHome"
            android:text="@string/nav_discover"
            style="@style/navItem"/>

        <RadioButton
            android:id="@+id/radioFunc"
            android:text="@string/nav_message"
            style="@style/navItem"/>

        <RadioButton
            android:id="@+id/radioSetting"
            android:text="@string/nav_mine"
            style="@style/navItem"/>
    </RadioGroup>

</LinearLayout>